model Site {
  id             String        @id @default(cuid())
  name           String?
  description    String?
  logo           String?       @default("https://market.dev/gw-logo.png")
  image          String?       @default("https://market.dev/placeholder.png")
  imageBlurhash  String?       @default("data:image/png;base64,")
  subdomain      String?       @unique
  customDomain   String?       @unique
  message404     String?       @default("Blimey! You've found a page that doesn't exist.")
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  homepageId     String?
  pages          Page[]
  media          Media[]
  userId         String /// @DEPRECATED. Should be converted to Organization.
  user           User?         @relation(fields: [userId], references: [id], onDelete: Cascade) /// @DEPRECATED. Should be converted to Organization.
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  @@index([userId])
  @@index([organizationId])
}

model Page {
  id             String        @id @default(cuid())
  title          String?
  content        String?
  siteId         String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  slug           String?
  draft          Boolean       @default(true)
  site           Site          @relation(fields: [siteId], references: [id], onDelete: Cascade)
  userId         String? /// @DEPRECATED. Should be converted to Organization.
  user           User?         @relation(fields: [userId], references: [id], onDelete: Cascade) /// @DEPRECATED. Should be converted to Organization.
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  @@unique([slug, siteId])
  @@index([siteId])
  @@index([userId])
  @@index([organizationId])
}

model Media {
  id        String   @id @default(cuid())
  siteId    String
  url       String
  site      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([siteId])
}
