generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id                          String         @id @default(cuid())
  name                        String?
  username                    String?
  gh_username                 String?        @unique
  email                       String?        @unique
  stripeProductId             String?        @unique
  stripeCustomerId            String?        @unique
  stripePaymentMethodId       String?        @unique
  stripeAccountId             String?        @unique
  stripeCSRF                  String?        @unique
  stripeAccountDisabled       Boolean        @default(false)
  stripeAccountDisabledReason String?
  projectName                 String?
  projectDescription          String?
  emailVerified               DateTime?
  image                       String?
  roleId                      String         @default("customer")
  createdAt                   DateTime       @default(now())
  updatedAt                   DateTime       @updatedAt
  accounts                    Account[]
  pages                       Page[]
  posts                       Post[]
  sessions                    Session[]
  sites                       Site[]
  tiers                       Tier[]
  features                    Feature[]
  subscriptions               Subscription[]
  repos                       Repo[]
  onboarding                  String?
  company                     String?
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  refresh_token_expires_in Int?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  oauth_token_secret       String?
  oauth_token              String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Post {
  id            String   @id @default(cuid())
  title         String?
  description   String?
  content       String?
  slug          String   @default(cuid())
  image         String?  @default("https://public.blob.vercel-storage.com/eEZHAoPTOBSYGBE3/hxfcV5V-eInX3jbVUhjAt1suB7zB88uGd1j20b.png")
  imageBlurhash String?  @default("data:image/png;base64,")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  published     Boolean  @default(false)
  siteId        String?
  userId        String?
  site          Site?    @relation(fields: [siteId], references: [id], onDelete: Cascade)
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([slug, siteId])
  @@index([siteId])
  @@index([userId])
}

model Site {
  id            String   @id @default(cuid())
  name          String?
  description   String?
  logo          String?  @default("https://www.gitwallet.co/gw-logo.png")
  font          String   @default("font-cal")
  image         String?  @default("https://www.gitwallet.co/placeholder.png")
  imageBlurhash String?  @default("data:image/png;base64,")
  subdomain     String?  @unique
  customDomain  String?  @unique
  message404    String?  @default("Blimey! You've found a page that doesn't exist.")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  userId        String
  homepageId    String?
  pages         Page[]
  posts         Post[]
  media         Media[]
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Page {
  id        String   @id @default(cuid())
  title     String?
  content   String?
  siteId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  slug      String?
  userId    String?
  draft     Boolean  @default(true)
  site      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([slug, siteId])
  @@index([siteId])
  @@index([userId])
}

model Example {
  id            Int     @id @default(autoincrement())
  name          String?
  description   String?
  domainCount   Int?
  url           String?
  image         String?
  imageBlurhash String?
}

model Tier {
  id            String  @id @default(cuid())
  userId        String
  stripePriceId String?

  name        String
  description String?
  tagline     String?

  published Boolean @default(false)
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  price         Int
  revision      Int
  versions      TierVersion[]
  features      Feature[]      @relation("FeatureToTier")
  subscriptions Subscription[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, stripePriceId])
}

model TierVersion {
  id            String  @id @default(cuid())
  tierId        String
  revision      Int
  price         Int
  stripePriceId String?

  tier          Tier           @relation(fields: [tierId], references: [id])
  features      Feature[]      @relation("FeatureToTierVersion")
  subscriptions Subscription[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tierId])
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String // Foreign key to reference User
  tierId               String
  stripeSubscriptionId String   @unique
  tierVersionId        String? // Foreign key to reference TierVersion
  createdAt            DateTime @default(now())
  state       String @default("active")

  user        User         @relation(fields: [userId], references: [id])
  tierVersion TierVersion? @relation(fields: [tierVersionId], references: [id])
  tier        Tier         @relation(fields: [tierId], references: [id])

  @@unique([userId, tierId])
}

model WaitlistUser {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Repo {
  id        String   @id @default(cuid())
  repoId    String   @unique
  name      String
  url       String?
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Service {
  id          String    @id
  name        String
  category    String
  description String?
  requiresUri Boolean
  features    Feature[]
  protocol    String?
}

model Feature {
  id           String        @id @default(cuid())
  userId       String
  name         String?
  uri          String?
  description  String?
  tiers        Tier[]        @relation("FeatureToTier")
  tierVersions TierVersion[] @relation("FeatureToTierVersion")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  user         User          @relation(fields: [userId], references: [id])
  service      Service?      @relation(fields: [serviceId], references: [id])
  serviceId    String?
  isEnabled    Boolean       @default(false)

  @@index([userId])
}


model Media {
  id        String   @id @default(cuid())
  siteId  String
  url      String
  site    Site     @relation(fields: [siteId], references: [id], onDelete: Cascade) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([siteId])
}